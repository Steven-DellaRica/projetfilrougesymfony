{% extends 'base.html.twig' %}

{% block title %}Videos page
{% endblock %}

{% block style_add %}
	<link rel="stylesheet" href="{{asset('css/videopage.css')}}">
{% endblock %}

{% block header %}
	{% include "navbar.html.twig" %}
{% endblock %}

{% block body %}
	<main>
		<section class="filter-section">
			<div class="filter-content">
				<h3>Système de tags</h3>

				<div>
					<p>Tags de catégories</p>
					<input type="text" placeholder="guide, combo, perso..."/>
					<ul class="category-button">
						<li>
							<button href="#">Guide</button>
						</li>
						<li>
							<button href="#">Combos</button>
						</li>
						<li>
							<button href="#">Persos</button>
						</li>
					</ul>
				</div>
				<div>
					<p>Tags par auteurs</p>
					<input type="text" placeholder="crimson, valmaster..."/>
					<ul class="category-button">
						<li>
							<button href="#">Mr.Crimson</button>
						</li>
						<li>
							<button href="#">Valmaster</button>
						</li>
						<li>
							<button href="#">Brian_F</button>
						</li>
					</ul>
				</div>
				<div>
					<p>Version du jeu</p>
					<input type="text" placeholder="Current, ..."/>
					<ul class="category-button">
						<li>
							<button href="#">Current</button>
						</li>
					</ul>
				</div>
			</div>
		</section>
		<section class="video-section">
			<div class="video-content">
				<h3>Système de filtre</h3>

                <div class="video-list">
                    {% block videoCard %}
                        {% include "videocard.html.twig" %}
                    {% endblock %}
                </div>

			</div>
		</section>
	</main>
{% endblock %}
