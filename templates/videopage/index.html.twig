{% extends 'base.html.twig' %}

{% block title %}Videos page
{% endblock %}

{% block style_add %}
	<link rel="stylesheet" href="{{asset('css/videopage.css')}}">
	<link rel="stylesheet" href="{{asset('css/videocard.css')}}">
{% endblock %}

{% block header %}
	{% include "navbar.html.twig" %}
{% endblock %}

{% block body %}
	<main>
		<section class="filter-section">
			<div class="filter-content">
				<h3>Système de tags</h3>

				<div class="tag-content">
					<p>Tags de catégories</p>
					<input type="text" placeholder="Guide, combo, perso..."/>
					<ul class="category-button">
						<li>
							<button href="#">Guide</button>
						</li>
						<li>
							<button href="#">Combos</button>
						</li>
						<li>
							<button href="#">Persos</button>
						</li>
						<li>
							<button href="#">Joueurs</button>
						</li>
					</ul>
				</div>
				<div class="tag-content">
					<p>Tags par auteurs</p>
					<input type="text" placeholder="Mr.Crimson, Valmaster..."/>
					<ul class="category-button">
						<li>
							<button href="#">Mr.Crimson</button>
						</li>
						<li>
							<button href="#">Valmaster</button>
						</li>
						<li>
							<button href="#">Brian_F</button>
						</li>
					</ul>
				</div>
				<div class="tag-content">
					<p>Version du jeu</p>
					<input type="text" placeholder="Current, ..."/>
					<ul class="category-button">
						<li>
							<button href="#">Current</button>
						</li>
					</ul>
				</div>
			</div>
		</section>
		<section class="video-section">
			<div class="video-content">
				<h3>Système de filtre</h3>

				<div class="video-list">
					{% block videoCard %}
						{% for video in videos %}
							<div class="video-card">
								<iframe width="320" height="180" src={{video.videolink}}></iframe>
								<h2 class="video-title">{{video.videotitle}}</h2>
								<ul class="video-tags">
									{% for tag in video.videotags %}
										<li>{{tag}}</li>
									{% endfor %}


								</ul>
								<p class="video-author">Auteur de la vidéo</p>
								<p class="video-views">1 000 000 vues</p>
							</div>

						{% endfor %}
						{# {% include "videocard.html.twig" %} #}
					{% endblock %}
				</div>

			</div>
		</section>
	</main>
{% endblock %}
