{% extends 'base.html.twig' %}

{% block title %}Videos{% endblock %}

{% block body %}
    <h1>Videos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Video_id</th>
                <td>{{ video.videoId }}</td>
            </tr>
            <tr>
                <th>Video_title</th>
                <td>{{ video.videoTitle }}</td>
            </tr>
            <tr>
                <th>Video_tags</th>
                <td>{{ video.videoTags ? video.videoTags|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Video_author</th>
                <td>{{ video.videoAuthor }}</td>
            </tr>
            <tr>
                <th>Video_views</th>
                <td>{{ video.videoViews }}</td>
            </tr>
            <tr>
                <th>Video_date</th>
                <td>{{ video.videoDate ? video.videoDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Video_thumbnail</th>
                <td>{{ video.videoThumbnail }}</td>
            </tr>
            <tr>
                <th>Video_timecode</th>
                <td>{{ video.videoTimecode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_videos_index') }}">back to list</a>

    <a href="{{ path('app_videos_edit', {'id': video.id}) }}">edit</a>

    {{ include('videos/_delete_form.html.twig') }}
{% endblock %}
